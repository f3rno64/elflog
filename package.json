{
  "name": "elflog",
  "version": "1.2.0",
  "description": "A tiny & highly configurable library that returns a custom Signale instance, with enums for log levels, colors and badges.",
  "keywords": [
    "enums",
    "chalk",
    "colors",
    "badges",
    "library",
    "signale",
    "logging",
    "console",
    "getLogger",
    "debugging",
    "typescript",
    "log-levels",
    "command-line",
    "logging-tool",
    "error-handling",
    "logging-utility",
    "logging-library",
    "error-reporting",
    "console-logging"
  ],
  "homepage": "https://github.com/f3rno64/elflog",
  "bugs": {
    "url": "https://github.com/f3rno64/elflog/issues"
  },
  "repository": "https://github.com/f3rno64/elflog",
  "license": "MIT",
  "author": "Cris Mihalache <f3rno64@gmail.com>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "pnpm build:ts && pnpm build:docs",
    "build:docs": "typedoc --plugin typedoc-plugin-missing-exports --out ./docs ./src && cp LICENSE.md docs/LICENSE.md && cp CHANGELOG.md docs/CHANGELOG.md",
    "build:ts": "NODE_PATH=./src tsc -p tsconfig.json",
    "format": "pnpm format:prettier && pnpm format:yaml",
    "format:check": "pnpm format:prettier:check && pnpm format:yaml:check",
    "format:prettier": "prettier --write .",
    "format:prettier:check": "prettier --check .",
    "format:yaml": "yamlfmt -conf .yamlfmt.yml .yamllint.yml -quiet -dstar **/*.{yaml,yml}",
    "format:yaml:check": "yamlfmt -conf .yamlfmt.yml .yamllint.yml-quiet -dry -dstar **/*.{yaml,yml}",
    "lint": "pnpm lint:markdownlint && pnpm lint:eslint && pnpm lint:yaml",
    "lint:eslint": "eslint -f stylish --ext .json,.ts package.json src/**/*",
    "lint:eslint:fix": "eslint -f stylish --fix --ext .json,.ts package.json src/**/*",
    "lint:fix": "pnpm lint:markdownlint:fix && pnpm lint:eslint:fix && pnpm lint:yaml:fix",
    "lint:markdownlint": "markdownlint README.md",
    "lint:markdownlint:fix": "markdownlint --fix README.md",
    "lint:yaml": "yamllint -f auto -s .yamlfmt.yml .yamllint.yml",
    "lint:yaml:fix": [
      "yamlfmt -conf .yamlfmt.yml -quiet -dry -dstar .yamlfmt.yml .yamllint.yml"
    ],
    "prepare": "husky",
    "prepare-release": "pnpm build && git add docs",
    "prepublish": "pnpm build",
    "release": "pnpm prepare-release && pnpm update-version && git push --follow-tags origin main",
    "serve:coverage": "http-server ./coverage",
    "serve:docs": "http-server ./docs",
    "test": "pnpm lint && pnpm format:check && pnpm build",
    "update-deps": "updates -u -g -c",
    "update-version": "standard-version -a"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "picocolors": "^1.0.0",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@commitlint/format": "^18.6.0",
    "@commitlint/types": "^18.6.0",
    "@eslint/js": "^8.56.0",
    "@types/eslint__js": "^8.42.3",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-immutable": "^1.0.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-jsonc": "^2.13.0",
    "eslint-plugin-lodash": "^7.4.0",
    "eslint-plugin-no-secrets": "^0.8.9",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-pure": "github:purely-functional/eslint-plugin-pure",
    "eslint-plugin-regexp": "^2.2.0",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-sonarjs": "^0.24.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-unicorn": "^51.0.1",
    "eslint-plugin-write-good-comments": "^0.2.0",
    "http-server": "^14.1.1",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "markdownlint-cli": "^0.39.0",
    "prettier": "^3.2.5",
    "remark": "^15.0.1",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.8",
    "typedoc-plugin-missing-exports": "^2.2.0",
    "typescript": "^5.3.3",
    "updates": "^15.1.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
